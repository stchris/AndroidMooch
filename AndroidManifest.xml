<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.github.stchris"
      android:versionCode="1" android:versionName="0.1">
    <application android:label="@string/app_name" android:debuggable="true">
		<activity android:name="com.github.stchris.activities.MainActivity"
					android:label="@string/app_name"
					android:theme="@android:style/Theme.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
        <activity android:name="com.github.stchris.activities.BookSearchActivity">
            <intent-filter>
                <action android:name="com.github.stchris.action.BookSearchAction" />
                <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.github.stchris.activities.BookInfoActivity">
			<intent-filter>
				<action android:name="com.github.stchris.action.BookInfoAction" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.github.stchris.activities.ShowImageActivity">
			<intent-filter>
				<action android:name="com.github.stchris.action.ShowImageAction" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name=".activities.BookSearchListActivity">
			<intent-filter>
				<action android:name="com.github.stchris.action.BookSearchAction" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.github.stchris.activities.WishlistActivity">
			<intent-filter>
				<action android:name="com.github.stchris.action.ShowImageAction" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.github.stchris.activities.InventoryActivity">
			<intent-filter>
				<action android:name="com.github.stchris.action.ShowImageAction" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
    </application>
    <uses-sdk android:minSdkVersion="4" />

<uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest> 